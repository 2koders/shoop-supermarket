@model Articulo

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Articulo</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DESC)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DESC)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PRE_VENT)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PRE_VENT)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.STOCK)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.STOCK)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PRE_COMP)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PRE_COMP)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PROV)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PROV.NAME)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CAT)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CAT.ID)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IMG)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IMG)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<h2>@Model.DESC</h2>
<p>
    <img alt="@Model.DESC"
src="@Model.IMG" />
</p>
<div id="album-details">
    <p>
        <em>Categor√≠a:</em>
        @Model.CAT.CAT
    </p>
    <p>
        <em>Proveedor:</em>
        @Model.PROV.NAME
    </p>
    <p>
        <em>Precio:</em>
        @Html.DisplayFor(precio => Model.PRE_VENT)
    </p>
    <p class="button">
        @Html.ActionLink("Agregar", "AddToCart", 
        "ShoppingCart", new { id = Model.ID }, "")
    </p>
</div>
