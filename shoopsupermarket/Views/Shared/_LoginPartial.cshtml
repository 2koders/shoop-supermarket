@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item my-auto ml-md-2">
        <a id="manage" style="cursor: pointer;" class="btn btn-primary" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
            <i class="fa fa-user"></i>
        </a>
    </li>
    <li class="nav-item my-auto ml-md-2">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="btn btn-primary"  title="Log Out">
                <i class="fa fa-sign-out"></i>
            </button>
        </form>
    </li>
}
else
{
    <li class="nav-item my-auto ml-md-2">
        <a class="btn btn-primary" id="login" asp-area="Identity" asp-page="/Account/Register" title="Register">
            <i class="fa fa-user-plus"></i>
        </a>
    </li>
    <li class="nav-item my-auto ml-md-2">
        <a class="btn btn-primary" id="login" asp-area="Identity" asp-page="/Account/Login" title="Sing in">
            <i class="fa fa-sign-in"></i>
        </a>
    </li>
}
    <li class="nav-item my-auto ml-md-2">
        <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="Index" title="ShoppingCart">
            <i class="fa fa-shopping-cart"></i>
        </a>
    </li>
</ul>


